{
  "name": "pmine-core",
  "version": "1.0.0",
  "description": "PMINE Core smart contracts",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "@pancakeswap/pancake-swap-lib": "0.0.4",
    "@truffle/hdwallet-provider": "^1.2.1",
    "@uniswap/lib": "4.0.1-alpha",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "ganache-cli": "^6.12.2",
    "truffle": "^5.1.61",
    "truffle-flattener": "^1.5.0",
    "web3": "^1.3.1"
  },
  "scripts": {
    "build": "truffle compile",
    "deploy": "truffle migrate",
    "deploy:bscmain": "npm run set:bscmain && truffle migrate --network bscmain",
    "deploy:chapel": "npm run set:chapel && truffle migrate --network chapel",
    "set:bscmain": "sed -i 's/NETWORK = Network.Chapel/NETWORK = Network.Bscmain/g' contracts/network/$.sol",
    "set:chapel": "sed -i 's/NETWORK = Network.Bscmain/NETWORK = Network.Chapel/g' contracts/network/$.sol",
    "source": "truffle-flattener contracts/Deployer.sol | sed '/^.*SPDX-License-Identifier:.*$/d' | sed '1s/^/\\/\\/ SPDX-License-Identifier: GPL-3.0-only\\n\\n/' > PMINE.sol",
    "test": "truffle test",
    "test:bscmain": "npm run set:bscmain && truffle test",
    "test:chapel": "npm run set:chapel && truffle test",
    "stress-test": "npm run deploy && node stress-test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrowthDeFi/pmine-v1-core.git"
  },
  "author": "raugfer",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/GrowthDeFi/pmine-v1-core/issues"
  },
  "homepage": "https://github.com/GrowthDeFi/pmine-v1-core#readme"
}
